<div class="m-6 flex flex-col">
<div class="flex flex-row break-all gap-4">
    <span>
      <h5 class="mb-1 font-bold text-3xl text-gray-900 dark:text-white">Products</h5>
      <span class="text-sm text-gray-500 dark:text-gray-400 break-all">
        Look though varity of products we deliver.
      </span>
    </span>
</div>

<div class="flex flex-rows gap-2 mt-2">
  <% @products.keys.each do | product_id |  %>
    <a href="/<%= product_id%>">
    <kbd class="px-2 py-1.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500">
      <%= @products[product_id][:name] %>
    </kbd>
  <% end %>
</div>
</div>
<%= render :template => "products/_products", :locals => { :products => @products } %>
