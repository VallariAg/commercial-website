<div class="flex flex-row m-6 break-all gap-4">
    <img class="mb-3 w-24 h-24 rounded-full shadow-lg" src=<%= @icon%> alt="Bonnie image"/>
    <span>
      <h5 class="mb-1 font-bold text-3xl font-medium text-gray-900 dark:text-white"><%= @title %></h5>
      <span class="text-sm text-gray-500 dark:text-gray-400 break-all"><%= @description %></span>
    </span>
</div>



<ul class="grid grid-cols-1  sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
  <% @items.keys.each do |item| %>
    <li>
      <div class="max-w-sm bg-gray-100 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 my-6 mx-6">
          <a href="<%= request.fullpath + "/" + @items[item][:id] %>">
              <img class="rounded-t-lg mx-auto h-auto" src=<%= @items[item][:images][0] %> alt="product image">
          </a>
          <div class="px-5 pb-5 pt-5">
              <a href="<%= request.fullpath + "/" + @items[item][:id] %>">
                <span class="text-2xl font-bold text-gray-900 dark:text-white"><%= @items[item][:name]%></span>
                  <h5 class="text-sm tracking-tight text-gray-900 dark:text-white"><%= @items[item][:name]%></h5>
              </a>
              <span class="bg-gray-300 text-gray-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-primary-light dark:text-primary-dark"><%= @title %></span>
          </div>
      </div>

    </li>
  <% end %>
</ul>

